<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/search_artist_image"
        android:layout_width="166dp"
        android:layout_height="163dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/image_corners"
        android:contentDescription="@string/search_artist"
        android:outlineProvider="background"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/search_artist_image" />

    <TextView
        android:id="@+id/search_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="29dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="@string/search_artist_title"
        android:textColor="@color/accent"
        android:textSize="25sp"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/search_song_image"
        android:layout_width="166dp"
        android:layout_height="163dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:contentDescription="@string/search_song"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/search_song" />

    <TextView
        android:id="@+id/search_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_artist"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="29dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="@string/search_song_title"
        android:textColor="@color/accent"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/search_lyrics_image"
        android:layout_width="166dp"
        android:layout_height="163dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="123dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/search_lyrics_image"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/search_lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_song"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="22dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="@string/search_lyrics_title"
        android:textColor="@color/accent"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="80dp"
        android:autofillHints="Finesse"
        android:background="@drawable/edit_text_field"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/hint"
        android:importantForAutofill="no"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/enter_song_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="#757575" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/find_button"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/enter"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />
</RelativeLayout>