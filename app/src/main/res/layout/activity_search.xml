<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/search_artist_image"
        android:layout_width="166dp"
        android:layout_height="163dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/image_corners"
        android:contentDescription="@string/search_artist"
        android:outlineProvider="background"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/search_artist_image" />

    <TextView
        android:id="@+id/search_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="29dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="@string/search_artist_title"
        android:textColor="@color/accent"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/search_song_image"
        android:layout_width="166dp"
        android:layout_height="163dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:contentDescription="@string/search_song"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/search_song" />

    <TextView
        android:id="@+id/search_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_artist"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="29dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Search Song"
        android:textColor="@color/accent"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search_lyrics_image" />
</RelativeLayout>